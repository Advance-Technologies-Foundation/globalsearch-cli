{
    "compilerOptions": {
      "outDir": "./build/",
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es5",
      "lib": [ "es2015", "dom"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "skipLibCheck": true,
      "strict": false
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  }
